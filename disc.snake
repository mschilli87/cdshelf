###########
# imports #
###########

# get parameter-related functions
import parameters

# get disc-related functions
import disc


#########
# rules #
#########

rule device:
  run:
    disc.get_device(config)

rule discid:
  run:
    disc.get_disc_id(disc.get_device(config))

rule directory:
  run:
    parameters.get_param("directory", config)

rule image:
  run:
    device = disc.get_device(config)
    basename = disc.get_basename(disc.read_disc_data(device))
    directory = parameters.get_param("directory", config)
    shell(disc.create_image(device, directory + "/bin", basename))
